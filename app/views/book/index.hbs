<h1>All your book</h1>
<div class="col-md-12">
    <a href="/book/upload" class="btn btn-success">Upload a book for sell</a>
</div>
<div>
    <h3>
        All the book you are selling
    </h3>
    {{#each books}}
        <div class="col-md-4 book-block">
            <a class="book-panel-link" href="/book/{{this.id}}">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{this.name}}-{{this.price}}$</h3>
                    </div>
                    <div class="panel-body">
                        <p>description: {{this.description}}</p>
                    </div>
                </div>
            </a>
        </div>

    {{/each}}

</div>